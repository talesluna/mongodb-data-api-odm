{
    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "outDir": "dist",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
            "./typings"
        ],
        "types": [
            "jest",
            "node",
        ],
    },
    "include": [
        "./__tests__/**/*",
    ],
    "files": [
        "package.json",
        "index.d.ts",
        "src/index.ts"
    ]
}